<% if @hello.errors.any? %>
	<div class="alert alert-danger">
		<h5><%= t('common.errors') %></h5>
		<ul>
			<% @hello.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>			
		</ul>
	</div>
<% end %>

<%= form_for @hello do |f| %>

	<div class="form-group">
		<%= f.label :summary %>
		<%= f.text_area :summary, class: 'form-control' %>		
	</div>

	<div class="form-group">
		<%= f.label :url %>
		<%= f.text_field :url, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :all_tags %>
		<%= f.text_field :all_tags, class: 'form-control' %>		
	</div>

	<div class="form-group">
	  <%= f.submit 'Save Link', class: 'btn btn-primary' %>
	  <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>

<% end %>